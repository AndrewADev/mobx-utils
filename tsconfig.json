{
    "version": "1.8.10",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "noEmit": true,
        "rootDir": ".",
        "lib": ["dom", "es2015", "scripthost"],
        "useDefineForClassFields": true,
        "strictNullChecks": true,
    },
    "include": ["**/*.ts"],
    "exclude": ["/node_modules"]
}
